@model Aemp.Logistica.Web.Models.DispatchModel
@{
    ViewBag.Title = "Transportista - Verificacion de Listado";    
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <div id="detail_up" class="float-right"><img src="~/Images/deploy_chevronup.gif"/></div>
            <div id="detail_down" class="float-right"><img src="~/Images/deploy_chevrondown.gif"/></div>
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>                
                <br/>
                <h2>@ViewBag.Message</h2>                
            </hgroup>
            <div id="featured_detail">
                <p>
                    <h5>Apuntes de Diseño</h5>
                    Esta pagina permite al transportista verificar que los detalles del albaran que se ha importado son correctos. Un albaran es en estado de "Importado" hasta que el transportista lo verifica,<br/>
                    <h5>Observaciones</h5>
                    De momento esta pagina es un prototipo que presenta siempre los mismos datos.
                </p>
            </div>
        </div>
    </section>
}
@Html.Partial("Listado", Model)
<table>
    <tr>
        <td><input type="button" value="Confirmar" onclick="location.href='@Url.Action("Confirm", "Dispatch")'" /></td>
        <td><input type="button" value="Descartar" onclick="location.href='@Url.Action("Discard", "Dispatch")'" /></td>
    </tr>
</table>
@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#lineas > tbody tr:odd").css("background-color", "#F7F7F7");
            $("#lineas > thead th").css("padding-right", "20px"); // ToDo: Use CSS to do this
            $("#header > tbody td:odd").css("background-color", "rgb(122, 192, 218)").css("padding-left", "20px").css("color", "white").css("font-size", "1.2em");
        });
    </script>
    <script src="~/Scripts/feature-detail.js" type="text/javascript"></script>
}
