@model Aemp.Logistica.Web.Models.UploadListadoModel

@{
    ViewBag.Title = "Transportista - Agregar Albarán";    
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <div id="detail_up" class="float-right"><img src="~/Images/deploy_chevronup.gif"/></div>
            <div id="detail_down" class="float-right"><img src="~/Images/deploy_chevrondown.gif"/></div>
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>
                @if (ViewBag.NotificationMsg != null)
                {
                    <br/>
                    <h2>@ViewBag.NotificationMsg</h2>
                }
            </hgroup>
            
            <div id="featured_detail">
                <p >
                    <h5>Apuntes de Diseño</h5>
                    Esta pagina permite al transportista subir un fichero de excel usando la plantilla de albaranes. Una vez subido el albaran la aplicacion muestra las lineas procesadas, para que el transportista pueda verificar los datos antes de hacerlos visibles al resto de usuarios.<br/>
                    <h5>Observaciones</h5>
                    De momento cualquier tipo de fichero puede ser subido al servidor ya que la funcion para procesar el fichero no esta todavia disponible.
                </p>
             </div>
        </div>
    </section>
}
@using (Html.BeginForm("UploadFile", "Dispatch", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>        
        @Html.LabelFor(model => model.PedidoReferencia)
        @Html.EditorFor(model => model.PedidoReferencia)
        @Html.ValidationMessageFor(m => m.PedidoReferencia)
        @Html.LabelFor(model => model.CamionReferencia)
        @Html.EditorFor(model => model.CamionReferencia)
        @Html.ValidationMessageFor(m => m.CamionReferencia)
        @Html.LabelFor(model => model.PedidoFecha)
        @Html.EditorFor(model => model.PedidoFecha)
        @Html.ValidationMessageFor(m => m.PedidoFecha)
        <legend>Seleccione Albaran:</legend>
        <ol>
            <li>
                <input type="file" name="uploadedFile" />
            </li>
        </ol>
        <input type="submit" value="Subir Archivo" />
    </fieldset>    
}
<p>
    @Html.ActionLink("Descargar Plantilla", "ExcelTemplate")
</p>

@section scripts
{
    <script src="~/Scripts/feature-detail.js" type="text/javascript"></script>
}
